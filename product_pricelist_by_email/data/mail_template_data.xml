<odoo noupdate="0">
    <!-- Product Price list Email template -->
    <record id="email_template_pricelist" model="mail.template">
        <field name="name">All Pricelist - Send by Email</field>
        <field name="subject">All Product Pricelists</field>
        <field name="model_id" ref="product_pricelist_by_email.model_product_pricelist"/>
        <field name="auto_delete" eval="False"/>
        <field name="report_name">${object.name}</field>
        <field name="body_html">
        	<![CDATA[
				<p>Dear ${ctx.get('user')},</p>
				<p>
				The Attached file is a PDF document which containing all the product pricelists.
				</p>
				<p>Thank you,</p>
				
				<p style="color:#888888;">
				${ctx.get('company')}
				</p>
			]]>
		</field>
	</record>
</odoo>